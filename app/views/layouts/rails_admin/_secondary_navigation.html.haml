:ruby
  user_cell = rcell(RailsAdmin::UserCell, _current_user)

%ul.nav.navbar-nav.navbar-right.root_links
  - actions(:root).each do |action|
    %li{class: "#{action.action_name}_root_link"}
      = link_to wording_for(:menu, action), { action: action.action_name, controller: 'rails_admin/main' }, class: action.pjax? ? "pjax" : ""
  - if main_app.respond_to?(:root_path)
    %li= link_to t('admin.home.name'), main_app.root_path
  = user_cell[:secondary_navigation]
