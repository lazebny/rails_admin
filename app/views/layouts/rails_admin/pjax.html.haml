:javascript
  $('.nav.nav-pills li.active').removeClass('active');
  $('.nav.nav-pills li[data-model="#{@abstract_model.to_param}"]').addClass('active');

%title= "#{@abstract_model.try(:pretty_name) || @page_name} | #{rcell(RailsAdmin::Shared::PluginCell).plugin_full_name}"
.page-header
  %h1= @page_name
= rcell(RailsAdmin::Layouts::FlashCell)[:show, flash]
= rcell(RailsAdmin::Shared::BreadcrumbCell, @abstract_model)[:show, @action, @object]

%ul.nav.nav-tabs
  = menu_for((@abstract_model ? (@object.try(:persisted?) ? :member : :collection) : :root), @abstract_model, @object)
  = content_for :contextual_tabs
= yield
